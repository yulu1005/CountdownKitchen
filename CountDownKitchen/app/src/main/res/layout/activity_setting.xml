<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@drawable/bg1" <!-- 設定背景圖片 bg1 -->
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <!-- 🔹 可捲動區域（中間內容） -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 🔸 直向排列元件 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 🔸 食材輸入欄位（搜尋用） -->
            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="請輸入欲提醒的食材"
                android:inputType="text" />

            <!-- 🔸 建議列表（動態顯示符合食材） -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_food_list"
                android:layout_width="381dp"
                android:layout_height="371dp" />

            <!-- 🔸 分隔標題：設定提醒時間 -->
            <TextView
                android:id="@+id/text_reminder_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="設定提醒時間"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 🔸 灰色分隔線 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#CCCCCC" />

            <!-- 🔸 提醒選項（RadioGroup） -->
            <RadioGroup
                android:id="@+id/radio_group_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 🔹 到期前一週提醒 -->
                <RadioButton
                    android:id="@+id/radio_week_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一個禮拜前" />

                <!-- 🔹 到期前一天提醒 -->
                <RadioButton
                    android:id="@+id/radio_day_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1天前" />

                <!-- 🔹 到期當日提醒 -->
                <RadioButton
                    android:id="@+id/radio_same_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="當日" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <!-- 🔹 底部導覽列（固定在畫面最底部） -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground" <!-- 使用系統背景 -->
        app:itemIconSize="30dp"
        app:itemPaddingBottom="3dp"
        app:itemPaddingTop="10dp"
        app:itemTextAppearanceActive="@style/BottomNavTextStyle"
        app:itemTextAppearanceInactive="@style/BottomNavTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" /> <!-- 導覽列選單資源 -->
</androidx.constraintlayout.widget.ConstraintLayout>
