# ==============================================================================
# 應用程式配置
# ==============================================================================

# 應用程式名稱
APP_NAME=voice-chat-gemini
APP_VERSION=1.0.0
APP_ENV=development

# 服務器配置
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ==============================================================================
# API 金鑰和認證
# ==============================================================================

# Google Gemini API 金鑰 (請替換為您的實際 API 金鑰)
GOOGLE_API_KEY=AIzaSyBwbqy85wGVIN2idVvAmkL9ecnqwo-bDdc

# Gemini 模型配置
GEMINI_MODEL=gemini-2.0-flash

# ==============================================================================
# 檔案路徑配置
# ==============================================================================

# 數據文件路徑
ITEMS_FILE=items.json
SCHEDULE_FILE=schedules.json
AUDIO_PATH=audio_input.wav
CHAT_HISTORY_FILE=chat_history.json

# ==============================================================================
# Whisper 配置
# ==============================================================================

# Whisper 模型大小 (tiny, base, small, medium, large)
WHISPER_MODEL=base

# ==============================================================================
# 音頻配置
# ==============================================================================

# 音頻採樣率
AUDIO_SAMPLE_RATE=16000

# 錄音時長 (秒)
AUDIO_DURATION=5

# ==============================================================================
# TTS 配置
# ==============================================================================

# Edge TTS 語音
TTS_VOICE=zh-TW-HsiaoChenNeural

# 語音速度 (0.5-2.0)
TTS_RATE=1.0

# ==============================================================================
# 日誌配置
# ==============================================================================

# 日誌級別 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日誌格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==============================================================================
# 安全配置
# ==============================================================================

# CORS 允許的來源 (用逗號分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# 請求限制
MAX_REQUEST_SIZE=10MB

# ==============================================================================
# 資料庫配置 (如果未來需要)
# ==============================================================================

# 資料庫 URL (SQLite 示例)
# DATABASE_URL=sqlite:///./voice_chat.db

# ==============================================================================
# Redis 配置 (如果需要緩存)
# ==============================================================================

# Redis 主機
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# ==============================================================================
# Docker 配置
# ==============================================================================

# 容器名稱
CONTAINER_NAME=voice-chat-gemini-app

# 網絡名稱
NETWORK_NAME=voice-chat-network

# ==============================================================================
# 開發配置
# ==============================================================================

# 自動重載
AUTO_RELOAD=true

# 開發模式
DEV_MODE=true
